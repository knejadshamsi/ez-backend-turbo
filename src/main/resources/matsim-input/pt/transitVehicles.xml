<?xml version="1.0" encoding="UTF-8"?>
<vehicleDefinitions>
    <vehicleType id="metro_type">
        <description>Metro Train</description>
        <capacity>
            <seats persons="200"/>
            <standingRoom persons="300"/>
        </capacity>
        <length meter="100.0"/>
        <width meter="3.0"/>
        <accessTime secondsPerPerson="0.5"/>
        <egressTime secondsPerPerson="0.5"/>
        <doorOperation mode="serial"/>
        <passengerCarEquivalents pce="0.0"/>
        <maximumVelocity meterPerSecond="22.22"/><!-- 80 km/h -->
        <flowEfficiencyFactor factor="1.0"/>
        <attributes>
            <attribute name="energyConsumptionKWhPerKm" class="java.lang.Double">4.5</attribute>
            <attribute name="emissionClass" class="java.lang.String">zero</attribute>
        </attributes>
    </vehicleType>

