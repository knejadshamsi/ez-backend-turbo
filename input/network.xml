<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE network SYSTEM "http://www.matsim.org/files/dtd/network_v2.dtd">
<network name="zero-emission-test-network">
    <nodes>
        <node id="1" x="0"    y="0" />
        <node id="2" x="1000" y="0" />
        <node id="3" x="2000" y="0" />
        <node id="4" x="3000" y="0" />
        <node id="5" x="1000" y="1000" />
        <node id="6" x="2000" y="1000" />  
    </nodes>
    <links>
        <!-- Main Forward Links -->
        <link id="1" from="1" to="2" length="1000.00" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        
        <!-- Zero-Emission Zone Link: Allows both cars but enforces restrictions in event handling -->
        <link id="2" from="2" to="3" length="1000.00" capacity="2000" freespeed="13.89" permlanes="1" modes="car">
            <attributes>
                <attribute name="type" class="java.lang.String">zero_emission_zone</attribute>
            </attributes>
        </link>

        <!-- Main Link to Final Destination -->
        <link id="3" from="3" to="4" length="1000.00" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        
        <!-- Reverse Links for Round Trip -->
        <link id="4" from="4" to="3" length="1000.00" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        
        <!-- Zero-Emission Zone Reverse Link -->
        <link id="5" from="3" to="2" length="1000.00" capacity="2000" freespeed="13.89" permlanes="1" modes="car">
            <attributes>
                <attribute name="type" class="java.lang.String">zero_emission_zone</attribute>
            </attributes>
        </link>

        <link id="6" from="2" to="1" length="1000.00" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        
        <!-- Detour Links for Conventional Cars -->
        <link id="7" from="2" to="5" length="1414.21" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        <link id="8" from="5" to="6" length="1000.00" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        <link id="9" from="6" to="3" length="1414.21" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        
        <!-- Reverse Detour Links -->
        <link id="10" from="3" to="6" length="1414.21" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        <link id="11" from="6" to="5" length="1000.00" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
        <link id="12" from="5" to="2" length="1414.21" capacity="2000" freespeed="13.89" permlanes="1" modes="car"/>
    </links>
</network>
