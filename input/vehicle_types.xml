<?xml version="1.0" encoding="UTF-8"?>
<vehicleDefinitions xmlns="http://www.matsim.org/files/dtd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.matsim.org/files/dtd http://www.matsim.org/files/dtd/vehicleDefinitions_v1.0.xsd">

    <!-- Base car type required by MATSim -->
    <vehicleType id="car">
        <description>Default Car</description>
        <length meter="4.5"/>
        <maximumVelocity meterPerSecond="33.33"/>
        <passengerCarEquivalents pce="1.0"/>
    </vehicleType>

    <!-- Electric Vehicles - Unrestricted Access -->
    <vehicleType id="ev">
        <description>Electric Vehicle</description>
        <length meter="4.8"/>
        <maximumVelocity meterPerSecond="33.33"/>
        <passengerCarEquivalents pce="1.0"/>
    </vehicleType>

    <!-- Low Emission Vehicles - Restricted Access with Penalties -->
    <vehicleType id="lev">
        <description>Low Emission Vehicle</description>
        <length meter="4.5"/>
        <maximumVelocity meterPerSecond="33.33"/>
        <passengerCarEquivalents pce="1.0"/>
    </vehicleType>

    <!-- Heavy Emission Vehicles - No Access During Operation Hours -->
    <vehicleType id="hev">
        <description>Heavy Emission Vehicle</description>
        <length meter="5.0"/>
        <maximumVelocity meterPerSecond="30.56"/>
        <passengerCarEquivalents pce="1.5"/>
    </vehicleType>

    <!-- Vehicle instances -->
    <vehicle id="ev_commuter_1_car" type="ev"/>
    <vehicle id="ev_commuter_2_car" type="ev"/>
    <vehicle id="ev_multiple_1_car" type="ev"/>
    
    <vehicle id="lev_commuter_1_car" type="lev"/>
    <vehicle id="lev_multiple_1_car" type="lev"/>
    <vehicle id="lev_offpeak_1_car" type="lev"/>
    
    <vehicle id="hev_commuter_1_car" type="hev"/>
    <vehicle id="hev_offpeak_1_car" type="hev"/>
    <vehicle id="hev_multiple_1_car" type="hev"/>
</vehicleDefinitions>
